@model Specializare


<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Modifica Specializarea</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            @* <input asp-for="SpecializareID" hidden/> *@
            <input asp-for="SpecializareID" type="hidden" />
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Nume" type="text" class="form-control border-0 shadow" placeholder="Name"/>
                    <label asp-for="Nume" class="ms-2"></label> 
                    <span asp-validation-for="Nume" class="text-danger"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3"> 
                        <button type="submit" class="btn btn-primary form-control"> Modifica </button>
                    </div>
                    <div class="col-6 col-md-3"> 
                        <a asp-controller="Specializare" asp-action="Index" class="btn btn-secondary form-control">
                            Inapoi la Specializari
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"/>
    }  
}