@model Specializare

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Adauga Specializare</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <!-- <div asp-validation-summary="All"></div> -->
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Nume" type="text" class="form-control border-0 shadow" placeholder="Name"/>
                    <label asp-for="Nume" class="ms-2"></label>
                    <span asp-validation-for="Nume" class="text-danger"></span>
                </div>
                <div class="row pt-2 justify-content-center">
                    <div class="col-6 col-md-3"> 
                        <button type="submit" class="btn btn-primary form-control"> Adauga </button>
                    </div>
                    <div class="col-6 col-md-3"> 
                        <a asp-controller="Specializare" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Inapoi la specializari
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"/>
    }  
}