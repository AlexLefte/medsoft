@model Specializare

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Sterge Specializare</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="SpecializareID" hidden/>
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Nume" type="text" disabled class="form-control border-0 shadow" placeholder="Name"/>
                    <label asp-for="Nume" class="ms-2"></label> 
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3"> 
                        <button type="submit" class="btn btn-danger form-control"> Sterge </button>
                    </div>
                    <div class="col-6 col-md-3"> 
                        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">
                            Inapoi la Specializari
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"/>
    }  
}